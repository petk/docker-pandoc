# https://editorconfig.org

root = true

[*]
trim_trailing_whitespace = true
insert_final_newline     = true
indent_style             = space
end_of_line              = lf
indent_size              = 4
tab_width                = 4
charset                  = utf-8

[*.{md,sh,yaml,yml}]
indent_size              = 2

[{*.yml,hooks/build,tests/test-all,tests/**/test}]
indent_style             = space
indent_size              = 2

[Makefile]
indent_style             = tab
